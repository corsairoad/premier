<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:clickable="true"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_checkin"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_car"
            android:layout_width="45dp"
            app:civ_border_width="0dp"
            android:layout_height="60dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_checkin"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@id/text_plat_no"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="16dp"
                android:textColor="@color/color_text_plat_no_checkin"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/text_remote_tiket_no"
                android:layout_width="match_parent"
                android:textSize="16dp"
                android:textColor="@color/color_text_plat_no_checkin"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/text_runner"
                android:layout_width="match_parent"
                android:textSize="14dp"
                android:textColor="@color/color_text_runnername_checkin"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/text_ready"
            android:text="@string/ready"
            android:textSize="16dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:visibility="gone"
            android:textColor="@android:color/holo_green_light"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v7.widget.CardView>